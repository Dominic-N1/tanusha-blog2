---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import UserSettingsLoad from "../components/UserSettingsLoad.astro";
import ConvertkitForm from "../components/ConvertkitForm.astro";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_PERMALINK } from "../config";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={SITE_TITLE}
      description={SITE_DESCRIPTION}
      permalink={SITE_PERMALINK}
    />
    <style>
      .content {
        margin-top: 4rem;
        margin-bottom: 8rem;
      }
      .content :global(main > * + *) {
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <UserSettingsLoad />
    <ConvertkitForm />
    <Header title={SITE_TITLE} />
    <main class="wrapper main">
      <h1>
        <span class="nowrap">❤ Привет,</span>
        <span class="nowrap">я Танюша!</span>
      </h1>
      <p>
        This template comes with a few integrations already configured in your
        <code>astro.config.mjs</code> file.
      </p>
      <nav>
        <ul>
          <li>Edit this page in <code>src/pages/index.astro</code></li>
          <li>
            Customize the blog post page layout in <code
              >src/layouts/BlogPost.astro</code
            >
          </li>
        </ul>
      </nav>
    </main>
    <Footer />
  </body>
</html>
